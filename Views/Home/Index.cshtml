@{
    ViewData["Title"] = "Ana Sayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hastane Randevu Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1579684385127-1ef15d508118?ixlib=rb-4.0.3');
            background-size: cover;
            color: white;
            padding: 100px 0;
            text-align: center;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        .btn-custom {
            background-color: #0d6efd;
            border: none;
            padding: 10px 25px;
        }
    </style>
</head>
<body>
    <!-- Hero Banner -->
    <section class="hero-section mb-5">
        <div class="container">
            <h1 class="display-4 fw-bold">HASTANE RANDEVU SİSTEMİ</h1>
            <p class="lead">Hızlı ve güvenli randevu almak için hemen giriş yapın.</p>
            <a href="/Identity/Account/Login" class="btn btn-light btn-lg px-4 me-2">Giriş Yap</a>
            <a href="/Identity/Account/Register" class="btn btn-outline-light btn-lg px-4">Kayıt Ol</a>
        </div>
    </section>

    <!-- Hızlı Erişim Kartları -->
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card card-hover shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Doktor Listesi</h5>
                        <p class="card-text">Uzman doktorlarımızı keşfedin.</p>
                        <a href="/Doktors" class="btn btn-custom text-white">Listeyi Gör</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-hover shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Randevu Al</h5>
                        <p class="card-text">Online randevunuzu oluşturun.</p>
                        <a href="/Randevus/Create" class="btn btn-custom text-white">Yeni Randevu</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-hover shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-hospital fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Klinikler</h5>
                        <p class="card-text">Kliniklerimiz hakkında bilgi alın.</p>
                        <a href="/Kliniks" class="btn btn-custom text-white">Detaylar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-4 mt-5">
        <div class="container">
            <p class="mb-0">© 2025 - Hastane Randevu Sistemi - Gülüle</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
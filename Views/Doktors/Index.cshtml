<script>
    function addNewDoctor() {
      
        const newDoctor = {
            name: "Yeni Doktor",
            specialization: "Branş",
            experience: "Deneyim",
            workingHours: "Çalışma Saatleri"
        };

      
        const doctorCard = `
            <div class="col">

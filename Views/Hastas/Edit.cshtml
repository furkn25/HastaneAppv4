@model HastaneAppv4.Models.Hasta

@{
    ViewData["Title"] = "Hasta Düzenle";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-warning text-dark d-flex align-items-center mb-4">
            <i class="fas fa-user-edit me-2 fs-4"></i>
            <h3 class="mb-0">Hasta Düzenle</h3>
        </div>

        <form asp-action="Edit" method="post" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Ad <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input asp-for="Ad" class="form-control" />
                </div>
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Soyad" class="form-label">Soyad <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input asp-for="Soyad" class="form-control" />
                </div>
                <span asp-validation-for="Soyad" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DogumTarihi" class="form-label">Doğum Tarihi <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    <input asp-for="DogumTarihi" type="date" class="form-control" />
                </div>
                <span asp-validation-for="DogumTarihi" class="text-danger small"></span>
            </div>

            <div class="mb-4">
          
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
             
                </div>
          
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-save me-1"></i> Kaydet
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Geri
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
}

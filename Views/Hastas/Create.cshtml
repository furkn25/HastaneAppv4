@model HastaneAppv4.Models.Klinik

@{
    ViewData["Title"] = "Yeni Klinik Ekle";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <h3 class="mb-4 text-primary text-center">
            <i class="fas fa-clinic-medical me-2"></i> Yeni Klinik Ekle
        </h3>

        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Klinik Adı <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-hospital"></i></span>
                    <input asp-for="Ad" class="form-control" placeholder="Klinik adını giriniz" />
                </div>
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

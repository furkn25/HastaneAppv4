@model IEnumerable<HastaneAppv4.Models.Hasta>

@{
    ViewData["Title"] = "Hasta Listesi";
}

<div class="container my-5">
    <h2 class="mb-4 text-primary">
        <i class="fas fa-users me-2"></i> Hasta Listesi
    </h2>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary mb-3">Yeni Hasta Ekle</a>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var hasta in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm p-3">
                        <h5 class="card-title">@hasta.Ad @hasta.Soyad</h5>
                        <p><strong>Doğum Tarihi:</strong> @hasta.DogumTarihi.ToString("dd.MM.yyyy")</p>
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@hasta.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            <a asp-action="Edit" asp-route-id="@hasta.Id" class="btn btn-outline-secondary btn-sm">Düzenle</a>
                            <form asp-action="Delete" asp-route-id="@hasta.Id" method="post" onsubmit="return confirm('Hasta silinsin mi?');" style="display:inline;">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Sil</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Hasta bulunamadı.</p>
        }
    </div>
</div>
